<%- include('../layout/header'); %>
<body>
    <!-- <div class="loadScreen"><img src="#{process.env.APP_URL}public/images/page-loading.gif" alt=""></div> -->
              
    <section class="login-page-wrapper">
        <div class="loginRegister_form_outer">
            <div class="loginRegister_form">
                <div class="logo"><img src="#{process.env.APP_URL}public/images/login_logo.png" alt=""></div>
                <form action="<%= process.env.ADMIN_URL %>Login" method="post">
                    <h3>Login</h3>
                    <%- include('../layout/message'); %>
                    <div class="input_field">
                        <strong>Email address</strong>
                        <input type="email" name="email" class="required" placeholder="Enter Email address" required>
                    </div>
                    <div class="input_field">
                        <strong>Password</strong>
                        <div class="pass-box">
                            <input id="password-field" class="required" type="password" name="password" placeholder="Enter password" required>
                            <span toggle="#password-field" class="toggle-password"></span>
                        </div>
                    </div>
                    <a href="<%= process.env.ADMIN_URL %>ForgotPassword"    class="forgot-pass">Forgot Password?</a>
                    <div class="input_field submit">
                        <input type="submit" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
<%- include('../layout/footer'); %>

 